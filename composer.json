{
    "name": "busbyjon/blog",
    "description": "Jon Busby's Wordpress Blog",
    "repositories":[
        {
            "type":"composer",
            "url":"https://wpackagist.org"
        },
        {
            "type": "git",
            "url":  "https://github.com/busbyjon/jonbusby-blog-theme.git"
        }
    ],
    "require-dev" : {
            "heroku/heroku-buildpack-php":"*"
        },
    "require": {
        "johnpbloch/wordpress": "4.6",
        "wpackagist-plugin/akismet":"dev-trunk",
        "wpackagist-plugin/captcha":">=4.2.4",
        "wpackagist-plugin/wordpress-importer":"0.6.1",
        "wpackagist-plugin/amazon-web-services":"0.3.6",
        "wpackagist-plugin/amazon-s3-and-cloudfront":"1.0.4",
	    "wpackagist-plugin/broken-link-checker":"1.11.2",
        "wpackagist-plugin/wp-smtp-config":"1.0",
        "wpackagist-theme/nisarg":"1.2.6",
        "busbyjon/jonbusby-blog-theme": "dev-master",
        "ext-mbstring":"*",
        "ext-gd":"*"
    },
    "extra": {
        "installer-paths": {
            "wordpress/wp-content/mu-plugins/{$name}/": [ "type:wordpress-muplugin" ],
            "wordpress/wp-content/plugins/{$name}/": [ "type:wordpress-plugin" ],
            "wordpress/wp-content/themes/{$name}/": [ "type:wordpress-theme" ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "mkdir wordpress/wp-content/cache",
            "mkdir wordpress/wp-content/uploads",
            "chmod 777 wordpress/wp-content/uploads",
            "chmod 777 wordpress/wp-content/cache",
            "chmod 755 wordpress/wp-content",
            "chmod 777 wp-config.php"
        ] 
    }

}

{
    "name": "busbyjon/blog",
    "description": "Jon Busby's Wordpress Blog",
    "repositories":[
        {
            "type":"composer",
            "url":"http://wpackagist.org"
        },
        {
            "type": "git",
            "url":  "https://github.com/busbyjon/jonbusby-blog.git"
        }
    ],
    "require-dev" : {
            "heroku/heroku-buildpack-php":"*"
        },
    "require": {
        "johnpbloch/wordpress": "4.3.1",
        "wpackagist-plugin/akismet":"dev-trunk",
        "wpackagist-plugin/captcha":">=4.1.3",
        "wpackagist-plugin/wordpress-importer":"0.6.1",
        "wpackagist-plugin/w3-total-cache":"0.9.4.1",
	    "wpackagist-plugin/broken-link-checker":"1.10.9",
        "busbyjon/jonbusby-blog": "dev-master",
        "wpackagist-plugin/filebrowser": "dev-trunk"
    },
    "extra": {
       "heroku": {
            "nginx-includes": ["nginx.conf"]
        },
        "installer-paths": {
            "wordpress/wp-content/mu-plugins/{$name}/": [ "type:wordpress-muplugin" ],
            "wordpress/wp-content/plugins/{$name}/": [ "type:wordpress-plugin" ],
            "wordpress/wp-content/themes/{$name}/": [ "type:wordpress-theme" ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "cp /app/user/wordpress/wp-content/plugins/w3-total-cache/wp-content/advanced-cache.php /app/user/wordpress/wp-content/advanced-cache.php"
        ] 
    }

}
